{
    "compilerOptions": {
      "module": "NodeNext",
      "esModuleInterop": true,
      "target": "ESNext",
      "moduleResolution": "NodeNext",
      "sourceMap": true,
      "outDir": "dist",
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "rootDir": ".",
      "lib": ["ESNext", "DOM", "DOM.Iterable"],
    },
    "include": ["*.ts"],
    "exclude": ["node_modules"],
    "ts-node": {
      "esm": true,
      "transpileOnly": true,
    },
  }
  